    "eslint-plugin-chai-friendly": "^0.7.2",
    "jest": "^27.5.1",
    "vue-jest": "^3.0.7"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "useTabs": true,
    "tabWidth": 4,
    "trailingComma": "es5"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "setupFilesAfterEnv": [
      "./src/tests/jest.setup.js"
